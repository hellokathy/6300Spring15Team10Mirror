<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" 
    android:background="#00BFFF">

    <Button
        android:id="@+id/Button01"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/addTransactionSubmitButton"
        android:layout_alignLeft="@+id/editCustomer"
        android:onClick="getCustomerInfoPressed"
        android:text=" Get Customer Info " />

    <Button
        android:id="@+id/editCustomer"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/addCustomer"
        android:layout_below="@+id/addCustomer"
        android:layout_marginTop="18dp"
        android:onClick="editCustomerPressed"
        android:text="Edit Customer" />

    <Button
        android:id="@+id/addTransactionSubmitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Button01"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="22dp"
        android:onClick="listOfCustomersPressed"
        android:text="List Of Customers" />

    <Button
        android:id="@+id/addCustomer"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:onClick="newCustomerPressed"
        android:text="Add Customer" />

    <Button
        android:id="@+id/addTransactionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editCustomer"
        android:layout_alignRight="@+id/editCustomer"
        android:layout_below="@+id/editCustomer"
        android:layout_marginTop="16dp"
        android:onClick="addTransactionPressed"
        android:text="Add Transaction" />

    <Button
        android:id="@+id/viewTransactionsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/addTransactionButton"
        android:layout_alignRight="@+id/addTransactionButton"
        android:layout_below="@+id/addTransactionButton"
        android:layout_marginTop="14dp"
        android:onClick="viewTransactionsPressed"
        android:text="View Transactions" />

</RelativeLayout>